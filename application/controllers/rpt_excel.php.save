        $this->excel->getActiveSheet()->setCellValue('D9', 'Tipo de Venta');
        $this->excel->getActiveSheet()->setCellValue('E9', 'Plan');
        $this->excel->getActiveSheet()->setCellValue('F9', 'S.A');
        $this->excel->getActiveSheet()->setCellValue('G9', 'Cuotas');
